class MiscTools:
    # Code der bei der Klassendefiniton ausgeführt wird
    mehr_daten = {} # Attribut (variable)
    big_list = [0] * 20

    for i in 1,2,3:
        print(i)

    # Code der bei Objektanlage ausgefürt wird
    def __init__(self): # Double Underline Method aka "dunder"
        self.daten = []
        self.mehr_daten["Name"] = "<undefined>"

    # Code der explizit aufgerufen wird
    def build(self, wert):
        self.daten = [ wert ]

    def add_value(self, wert):
        self.daten.append(wert)

    def dump(self):
        print(self.daten)

o1 = MiscTools()
o2 = MiscTools()

#o1.build(4711)
#o2.build("Hello")

o1.add_value(1234)
o1.dump()

o3 = o1
