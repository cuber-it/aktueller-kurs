# Use ubuntu base image
FROM ubuntu

# Install OpenSSH Server
RUN apt-get update && apt-get install -y openssh-server

# Create directory for sshd
RUN mkdir /var/run/sshd

# Create user and set password
RUN useradd -ms /bin/bash paramiko && echo 'paramiko:password' | chpasswd

# Expose SSH port
EXPOSE 22

# Start SSH server
CMD ["/usr/sbin/sshd", "-D"]

#Aufruf: docker run -d -p 2222:22 ssh_server
